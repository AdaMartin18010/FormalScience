{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  
  "default": true,
  
  "MD001": true,
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD007": {
    "indent": 2
  },
  "MD010": {
    "spaces_per_tab": 2
  },
  "MD012": false,
  "MD013": false,
  "MD024": {
    "siblings_only": true
  },
  "MD025": true,
  "MD026": {
    "punctuation": ".,;:"
  },
  "MD029": {
    "style": "ordered"
  },
  "MD030": {
    "ul_single": 1,
    "ul_multi": 1,
    "ol_single": 1,
    "ol_multi": 1
  },
  "MD031": true,
  "MD032": true,
  "MD033": false,
  "MD034": false,
  "MD036": false,
  "MD040": true,
  "MD041": false,
  "MD046": {
    "style": "fenced"
  },
  "MD047": true,
  "MD048": {
    "style": "backtick"
  },
  "MD049": {
    "style": "underscore"
  },
  "MD050": {
    "style": "asterisk"
  },
  "MD051": true
}
